<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dark_purple_gradient"
    android:orientation="vertical"
    tools:context=".modules.photo.ShowPhotosActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/photoViewToolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:theme="?attr/actionBarTheme"
        app:title="Photos"></androidx.appcompat.widget.Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/photoListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>